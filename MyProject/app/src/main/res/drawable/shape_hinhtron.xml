<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#DEA5E8" />
            <corners
                android:radius="500dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#FCFFFC"
                android:endColor="#AEDF9F"
                android:angle="270" />

            <corners
                android:radius="500dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>